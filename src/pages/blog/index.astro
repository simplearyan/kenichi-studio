---
import Layout from "../../layouts/Layout.astro";
import Navbar from "@/layouts/components/Navbar.astro";
import { getCollection } from "astro:content";
import { ArrowRight } from "lucide-react";
import CtaSection from "@features/website/components/CtaSection.astro";

const posts = (await getCollection("blog")).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const featuredPost = posts[0];
const remainingPosts = posts.slice(1);

// Napkin-like pastel palette
const styles = [
    {
        bg: "bg-white border-pink-100 hover:border-pink-200",
        tag: "bg-pink-50 text-pink-600",
        placeholder: "assets/images/placeholders/placeholder-pink.svg",
    }, // Pink
    {
        bg: "bg-white border-orange-100 hover:border-orange-200",
        tag: "bg-orange-50 text-orange-600",
        placeholder: "assets/images/placeholders/placeholder-orange.svg",
    }, // Peach
    {
        bg: "bg-white border-emerald-100 hover:border-emerald-200",
        tag: "bg-emerald-50 text-emerald-600",
        placeholder: "assets/images/placeholders/placeholder-green.svg",
    }, // Green
    {
        bg: "bg-white border-blue-100 hover:border-blue-200",
        tag: "bg-blue-50 text-blue-600",
        placeholder: "assets/images/placeholders/placeholder-blue.svg",
    }, // Blue
];
---

<Layout title="Blog - Kenichi">
    <Navbar />
    <main class="bg-slate-50 min-h-screen pt-12 pb-24">
        {/* Header */}
        <div class="container mx-auto px-6 py-16 text-center max-w-2xl">
            <h1
                class="text-4xl md:text-6xl font-bold text-slate-900 mb-6 font-display tracking-tight"
            >
                Blog
            </h1>
            <p class="text-xl text-slate-600 leading-relaxed">
                Tutorials, updates, and deep dives into the world of
                programmatic animation.
            </p>
        </div>

        <div class="container mx-auto px-6">
            {/* Featured Post */}
            {
                featuredPost && (
                    <div class="mb-16">
                        <a
                            href={`${import.meta.env.BASE_URL}blog/${featuredPost.slug}`}
                            class="group relative bg-white rounded-3xl overflow-hidden shadow-sm border border-slate-200 hover:shadow-xl transition-all duration-300 grid md:grid-cols-2 gap-8 p-4 md:p-8"
                        >
                            <div class="relative overflow-hidden rounded-2xl aspect-video md:aspect-auto">
                                <div class="absolute inset-0 bg-slate-100 animate-pulse" />
                                <img
                                    src={
                                        featuredPost.data.image ||
                                        `${import.meta.env.BASE_URL}assets/images/placeholders/placeholder-blue.svg`
                                    }
                                    alt={featuredPost.data.title}
                                    class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                                    onerror={`this.onerror=null; this.src='${import.meta.env.BASE_URL}assets/images/placeholders/placeholder-blue.svg';`}
                                />
                            </div>
                            <div class="flex flex-col justify-center py-4 md:px-8">
                                <div class="flex items-center gap-3 mb-6">
                                    <span class="px-3 py-1 rounded-full bg-blue-50 text-blue-600 text-xs font-bold uppercase tracking-wider">
                                        Featured
                                    </span>
                                    <span class="text-slate-400 text-sm font-semibold">
                                        {featuredPost.data.pubDate.toLocaleDateString(
                                            "en-US",
                                            {
                                                month: "long",
                                                day: "numeric",
                                                year: "numeric",
                                            },
                                        )}
                                    </span>
                                </div>
                                <h2 class="text-3xl md:text-5xl font-bold text-slate-900 mb-6 leading-tight font-display group-hover:text-blue-600 transition-colors">
                                    {featuredPost.data.title}
                                </h2>
                                <p class="text-slate-600 mb-8 text-lg leading-relaxed line-clamp-3">
                                    {featuredPost.data.description}
                                </p>
                                <div class="font-bold text-blue-600 flex items-center group-hover:translate-x-2 transition-transform">
                                    Read Article{" "}
                                    <ArrowRight size={20} className="ml-2" />
                                </div>
                            </div>
                        </a>
                    </div>
                )
            }

            {/* Grid */}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {
                    remainingPosts.map((post, index) => {
                        const style = styles[index % styles.length];
                        const fallbackImage = `${import.meta.env.BASE_URL}${style.placeholder}`;

                        return (
                            <article
                                class={`group bg-white rounded-2xl overflow-hidden border border-slate-200 hover:border-blue-200 hover:shadow-lg transition-all duration-300 hover:-translate-y-1 flex flex-col h-full`}
                            >
                                <a
                                    href={`${import.meta.env.BASE_URL}blog/${post.slug}`}
                                    class="h-full flex flex-col"
                                >
                                    {/* Image Area */}
                                    <div class="aspect-video overflow-hidden relative bg-slate-50">
                                        <img
                                            src={
                                                post.data.image || fallbackImage
                                            }
                                            alt={post.data.title}
                                            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                                            onerror={`this.onerror=null; this.src='${fallbackImage}';`}
                                        />
                                    </div>

                                    <div class="p-8 flex flex-col flex-grow">
                                        {/* Date */}
                                        <div class="flex items-center justify-between mb-4">
                                            <div
                                                class={`text-xs font-bold px-2 py-1 rounded-md ${style.tag} uppercase tracking-wide`}
                                            >
                                                Article
                                            </div>
                                            <div class="text-xs font-bold text-slate-400 uppercase tracking-wide">
                                                {post.data.pubDate.toLocaleDateString(
                                                    "en-US",
                                                    {
                                                        month: "short",
                                                        day: "numeric",
                                                        year: "numeric",
                                                    },
                                                )}
                                            </div>
                                        </div>

                                        {/* Title */}
                                        <h2 class="text-xl font-bold text-slate-900 mb-3 leading-tight font-display group-hover:text-blue-600 transition-colors">
                                            {post.data.title}
                                        </h2>

                                        {/* Description */}
                                        <p class="text-slate-600 mb-6 line-clamp-2 text-sm leading-relaxed">
                                            {post.data.description}
                                        </p>

                                        {/* Link */}
                                        <div class="mt-auto pt-4 border-t border-slate-100 w-full flex justify-end">
                                            <ArrowRight
                                                size={16}
                                                className="text-slate-400 group-hover:text-blue-600 group-hover:translate-x-1 transition-all"
                                            />
                                        </div>
                                    </div>
                                </a>
                            </article>
                        );
                    })
                }
            </div>
        </div>

        <CtaSection />
    </main>
</Layout>

<style>
    .font-display {
        font-family: "Outfit", sans-serif;
    }
</style>
